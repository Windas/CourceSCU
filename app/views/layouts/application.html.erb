<!DOCTYPE html>
<html>
  <head>
    <title>ClassWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="wrapper">
        <%= render 'share/header' %>
        <%= yield %>
        <%= render 'share/footer' %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
